{
  "name": "3d-printer-control-panel",
  "version": "1.5.9",
  "description": "3D Printer Control Panel with Smart Temperature Monitoring for Klipper and Bambu Lab",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac --universal",
    "build:linux": "electron-builder --linux",
    "dev": "electron . --dev --enable-logging"
  },
  "keywords": [
    "klipper",
    "bambu lab",
    "3d printer",
    "control panel",
    "electron",
    "temperature monitoring",
    "moonraker",
    "mqtt"
  ],
  "author": "Tom Tomich",
  "license": "MIT",
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "chart.js": "^4.5.0",
    "electron-store": "^8.1.0",
    "mqtt": "^5.3.5"
  },
  "build": {
    "appId": "3D Printer Control Panel",
    "productName": "3D Printer Control Panel",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "src/**/*",
      "icons/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "icons/icon.ico",
      "artifactName": "${productName}-${version}-Windows-Setup.${ext}",
      "publish": null
    },
    "mac": {
      "target": "dmg",
      "icon": "icons/icon.icns",
      "artifactName": "${productName}-${version}-macOS-Universal.${ext}",
      "publish": null
    },
    "linux": {
      "target": "AppImage",
      "icon": "icons/icon.png",
      "category": "Utility",
      "artifactName": "${productName}-${version}-Linux.${ext}",
      "publish": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}-${version}-Windows-Setup.${ext}"
    },
    "publish": null
  }
}
