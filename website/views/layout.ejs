<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - 3D Printer Control Panel</title>
    <% if (typeof description !== 'undefined') { %>
    <meta name="description" content="<%= description %>">
    <% } %>
    <link rel="stylesheet" href="/css/style.css">
    <% if (typeof additionalCSS !== 'undefined') { %>
        <% additionalCSS.forEach(css => { %>
    <link rel="stylesheet" href="<%= css %>">
        <% }); %>
    <% } %>
    <link rel="icon" href="/favicon.ico">
</head>
<body>
    <%- include('partials/header', {currentPage: currentPage || '', showDocs: showDocs || false}) %>
    
    <main>
        <%- body %>
    </main>
    
    <%- include('partials/footer', {showLicense: showLicense || false, showCommercialNote: showCommercialNote || false}) %>
    
    <% if (typeof additionalJS !== 'undefined') { %>
        <% additionalJS.forEach(js => { %>
    <script src="<%= js %>"></script>
        <% }); %>
    <% } %>
</body>
</html>

